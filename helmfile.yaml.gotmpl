environments:
  dev:
    values:
      - values/dev.yml
      - secrets/dev-secret.yml
  stage:
    values:
      - values/stage.yml
      - secrets/stage-secret.yml
---
releases:
  - name: nginxdemo
    namespace: "{{ .Values.namespace }}"
    chart: ./charts/nginxdemo
    createNamespace: true
    values:
      - values/{{ .Environment.Name }}.yml
      - secrets/{{ .Environment.Name }}-secret.yml
      - autogenerated:
          buildId: "{{ now | date \"20060102150405\" }}"